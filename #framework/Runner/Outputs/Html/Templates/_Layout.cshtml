@using System.Linq
@inherits FeatureTests.Runner.Outputs.Html.HtmlTemplateBase<FeatureTests.Runner.Outputs.Html.Models.HtmlBasicModel>

<!DOCTYPE html>
@* Metanote: Ignore the following note in Razor template, it is only relevant to the result. *@
<!-- Note: This file has been generated by TableGenerator and should not be edited manually. -->
<html>
  <head>
    <title>@Model.Title</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, user-scalable=no" />

    <link rel='stylesheet' href='css/tooltipster.css' />
    <link rel='stylesheet' href='css/main.css' />
    
    <script type="text/javascript" src="http://code.jquery.com/jquery-2.0.3.min.js"></script>
    <script type="text/javascript" src="js/jquery.tooltipster.min.js"></script>
    <script type="text/javascript" src="js/waypoints.min.js"></script>
    <script type="text/javascript" src="js/main.js"></script>
  </head>
  <body>
    <div class="sidebar">
      <h1 class="sidebar-title">Feature Tests</h1>

      <nav class="sidebar-nav">
        <ul>
        @foreach (var link in Model.Navigation) {
          <li>
            <a href="@link.Url" @(@link.OnCurrentPage ? "data-same-page" : null)>@link.Name</a>
            <ul>
            @foreach (var childLink in link.ChildLinks) {
              <li><a href="@childLink.Url" @(@link.OnCurrentPage ? "data-same-page" : null)>@childLink.Name</a></li>
            }
            </ul>
          </li>
        }
        </ul>
      </nav>
     
      <div class="sidebar-github">
        <div class="icon"></div>
        <a href="http://github.com/ashmind/net-feature-tests">Fork on GitHub</a>
      </div>
    </div>

    <main class="content">
      <h1>@Model.Title</h1>
      
      @RenderBody()
    </main>
    
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-1782671-9', 'apphb.com');
      ga('send', 'pageview');

    </script>
  </body>
</html>